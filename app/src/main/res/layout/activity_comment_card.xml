<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_comment_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/img_dd_profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_comment_nickname"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textStyle="bold"
                    android:textColor="@color/colorDarkPurple" />

                <TextView
                    android:id="@+id/textView_comment_content"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="댓글 내용" />
                <TextView
                    android:id="@+id/textView_unique_code"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="리뷰 아이템 고유번호" />

            </LinearLayout>
        <ImageButton
                android:id="@+id/imageButton_comment_spinner"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ic_more_vert_black_24dp"
                app:menu="@menu/myreview_menu" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>